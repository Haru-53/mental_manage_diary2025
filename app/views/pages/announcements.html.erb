<div class="container mt-4">
  <h1>お知らせ一覧</h1>
  
  <div class="announcements-list mt-4">
    <!-- お知らせがある場合 -->
    <% if defined?(@announcements) && @announcements.present? %>
      <% @announcements.each do |announcement| %>
        <div class="announcement-item card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= announcement.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= announcement.created_at.strftime("%Y/%m/%d") %></h6>
            <p class="card-text"><%= announcement.content %></p>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- お知らせがない場合 -->
      <div class="alert" style="background-color: #FF9AAA; color: #56230D; border-color: #FF8A7E;">
        現在お知らせはありません。
      </div>
    <% end %>
  </div>
</div>

